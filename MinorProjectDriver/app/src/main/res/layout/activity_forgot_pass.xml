<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgblue"
    tools:context=".ForgotPassActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:text="Contact Admin-"
        android:textSize="45dp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/name"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="64dp"

        android:background="@drawable/round_corner"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="MissingConstraints">

        <TextView
            android:fontFamily="sans-serif-condensed"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bishal Kumar Pandey"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:fontFamily="sans-serif-condensed"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:fontFamily="sans-serif-condensed"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7th Semester(20BTECHIT-05)"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:fontFamily="sans-serif-condensed"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Department of Information Technology"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:fontFamily="sans-serif-condensed"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="School of Technology, NEHU"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:fontFamily="sans-serif-condensed"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+91 7002444019"
            android:textStyle="bold"
            android:textSize="20sp" />

        <TextView
            android:fontFamily="sans-serif-condensed"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pandeybishal921@gmail.com"
            android:textStyle="bold"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/round_corner"
        android:orientation="vertical"
        android:padding="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.377"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name"
        tools:ignore="MissingConstraints">

        <TextView
            android:fontFamily="sans-serif-condensed"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:fontFamily="sans-serif-condensed"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room No-21"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:fontFamily="sans-serif-condensed"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weinia Group of Hostels(H-21)"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:fontFamily="sans-serif-condensed"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="North Eastern Hill University"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>